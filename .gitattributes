# Normalize all text files to LF by default
* text=auto eol=lf

# Windows-specific scripts keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Common text types
*.md   text eol=lf
*.txt  text eol=lf
*.html text eol=lf
*.css  text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.py   text eol=lf
*.sh   text eol=lf

# Binary assets
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.webp  binary
*.ico   binary
*.db    binary
*.sqlite3 binary


