# SUGGESTLY ELITE - ENVIRONMENT CONFIGURATION
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=your-app-id

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
REACT_APP_STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
REACT_APP_STRIPE_STARTER_PRICE_ID=price_starter_plan_id
REACT_APP_STRIPE_PRO_PRICE_ID=price_pro_plan_id
REACT_APP_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# =============================================================================
# OPENAI AI SERVICES
# =============================================================================
REACT_APP_OPENAI_API_KEY=sk-your-openai-api-key
REACT_APP_OPENAI_ORGANIZATION=org-your-organization-id

# =============================================================================
# GOOGLE ANALYTICS
# =============================================================================
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# EMAIL SERVICES
# =============================================================================
REACT_APP_EMAIL_API_KEY=your-email-service-api-key
REACT_APP_EMAIL_DOMAIN=your-email-domain.com
REACT_APP_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# WEBSOCKET & REAL-TIME
# =============================================================================
REACT_APP_WEBSOCKET_URL=wss://your-websocket-server.com

# =============================================================================
# SOCIAL LOGIN
# =============================================================================
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_GITHUB_CLIENT_ID=your-github-client-id

# =============================================================================
# EXTERNAL APIs
# =============================================================================
REACT_APP_WEATHER_API_KEY=your-weather-api-key
REACT_APP_NEWS_API_KEY=your-news-api-key
REACT_APP_CRYPTO_API_KEY=your-crypto-api-key

# =============================================================================
# DEPLOYMENT & ENVIRONMENT
# =============================================================================
NODE_ENV=development
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_EMAIL=true

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
REACT_APP_MAX_REQUESTS_PER_MINUTE=100
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_CSRF_TOKEN=your-csrf-token

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
REACT_APP_CACHE_DURATION=300000
REACT_APP_MAX_CACHE_SIZE=50
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_ERROR_TRACKING=true

# =============================================================================
# CUSTOMIZATION
# =============================================================================
REACT_APP_BRAND_NAME=Suggestly Elite
REACT_APP_BRAND_COLOR=#6366f1
REACT_APP_SUPPORT_EMAIL=support@suggestly.com
REACT_APP_CONTACT_PHONE=+1-555-0123

# =============================================================================
# INTEGRATIONS
# =============================================================================
REACT_APP_SLACK_WEBHOOK_URL=your-slack-webhook-url
REACT_APP_DISCORD_WEBHOOK_URL=your-discord-webhook-url
REACT_APP_TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =============================================================================
# BACKUP & STORAGE
# =============================================================================
REACT_APP_BACKUP_ENABLED=true
REACT_APP_STORAGE_PROVIDER=firebase
REACT_APP_MAX_FILE_SIZE=10485760

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
REACT_APP_DEBUG_MODE=false
REACT_APP_SHOW_DEV_TOOLS=false
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_MOCK_API_DELAY=1000

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
REACT_APP_DEFAULT_LOCALE=en
REACT_APP_SUPPORTED_LOCALES=en,es,fr,de,it,pt,ru,zh,ja,ko

# =============================================================================
# ACCESSIBILITY
# =============================================================================
REACT_APP_ENABLE_SCREEN_READER=true
REACT_APP_HIGH_CONTRAST_MODE=false
REACT_APP_REDUCED_MOTION=false

# =============================================================================
# PRIVACY & COMPLIANCE
# =============================================================================
REACT_APP_GDPR_COMPLIANT=true
REACT_APP_COOKIE_CONSENT=true
REACT_APP_PRIVACY_POLICY_URL=https://your-domain.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# =============================================================================
# NOTIFICATIONS
# =============================================================================
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key
REACT_APP_NOTIFICATION_ICON=/icon-192x192.png

# =============================================================================
# ADVANCED FEATURES
# =============================================================================
REACT_APP_ENABLE_QUANTUM_FEATURES=false
REACT_APP_ENABLE_BLOCKCHAIN=false
REACT_APP_ENABLE_VR_AR=false
REACT_APP_ENABLE_IOT_INTEGRATION=false

# =============================================================================
# TESTING & QUALITY ASSURANCE
# =============================================================================
REACT_APP_ENABLE_AUTOMATED_TESTING=true
REACT_APP_TEST_USER_EMAIL=test@example.com
REACT_APP_TEST_USER_PASSWORD=testpassword123

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
REACT_APP_AUTO_BACKUP_INTERVAL=86400000
REACT_APP_BACKUP_RETENTION_DAYS=30
REACT_APP_ENABLE_DISASTER_RECOVERY=false

# =============================================================================
# SCALABILITY & PERFORMANCE
# =============================================================================
REACT_APP_CDN_URL=https://cdn.your-domain.com
REACT_APP_API_RATE_LIMIT=1000
REACT_APP_MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# SECURITY HEADERS
# =============================================================================
REACT_APP_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.openai.com https://api.stripe.com wss:;"
REACT_APP_HSTS_MAX_AGE=31536000
REACT_APP_X_FRAME_OPTIONS=DENY
REACT_APP_X_CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# CUSTOM DOMAINS & ROUTING
# =============================================================================
REACT_APP_CUSTOM_DOMAIN=your-domain.com
REACT_APP_SUBDOMAIN=app
REACT_APP_SSL_ENABLED=true

# =============================================================================
# MONETIZATION & BUSINESS
# =============================================================================
REACT_APP_FREE_TIER_LIMIT=100
REACT_APP_PREMIUM_FEATURES_ENABLED=true
REACT_APP_AFFILIATE_PROGRAM_ENABLED=false
REACT_APP_REFERRAL_BONUS=10

# =============================================================================
# SUPPORT & DOCUMENTATION
# =============================================================================
REACT_APP_HELP_CENTER_URL=https://help.your-domain.com
REACT_APP_API_DOCUMENTATION_URL=https://docs.your-domain.com
REACT_APP_COMMUNITY_FORUM_URL=https://community.your-domain.com

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
REACT_APP_COMPANY_NAME=Your Company Inc.
REACT_APP_COMPANY_ADDRESS=123 Business St, City, State 12345
REACT_APP_COMPANY_PHONE=+1-555-0123
REACT_APP_COMPANY_EMAIL=legal@your-domain.com
REACT_APP_TAX_ID=12-3456789

# =============================================================================
# END OF CONFIGURATION
